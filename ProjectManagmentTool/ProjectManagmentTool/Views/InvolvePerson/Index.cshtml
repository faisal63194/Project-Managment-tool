<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Involve Person</title>
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <style>
        table tr:hover {
            background-color: green;
            color: white;
        }
    </style>
</head>

<body>
<div class="container" id="padding">
    <div class="row ">
        <div class="" id="boxShadow">

            <form method="POST" class="form-horizontal" id="involvePerson">
                <fieldset>

                    <legend class="text-center">View All Project in which you are involved </legend>
                   
                    <table class="table  table-bordered" id="myTable">
                        <thead>
                        <tr>
                            <th style="visibility: hidden">ProjectId</th>
                            <th>Name </th>
                            <th>Short Name</th>
                            <th>Status</th>
                            <th>No Of Member</th>
                            <th>No Of Task</th>
                        </tr>
                        </thead>
                        <tbody>
                           
                        @foreach (var data in ViewBag.listOfInvolvePerson)
                        {
                            <tr>
                                <td style="visibility: hidden">@data.ProjectId</td>
                                <td>@data.ProjectName</td>
                                <td>@data.CodeName</td>
                                <td>@data.Status</td>
                                <td>@data.NoOfMember</td>
                                <td>@data.NoOfTask</td>

                            </tr>
                        }
                        </tbody>


                    </table>
                        
                </fieldset>
            </form>

        </div>
    </div>
</div>
    
    @section scripts{

        <script src="~/Scripts/jquery-1.12.4.js"></script>
        <script type="text/javascript">

            $(document).ready(function () {
                var table = document.getElementById("myTable"), rIndex;

                for (var i = 0; i < table.rows.length; i++) {
                    table.rows[i].onclick = function () {
                        rIndex = this.rowIndex;

                        var proid = this.cells[0].innerHTML;
                        //alert(proid);
                        window.location.href = "http://localhost:54993/ProjectDetails/ShowProjectDetails?ProjectId=" + proid;

                    };
                }
                $('table tbody tr').click(function () {

                    
                    //var x = document.getElementById("myTable").rows[0].cells;
                    //var myvar = ($(this.cells[0].innerHTML));
                    //console.log(myvar);
                    //alert(myvar);
                    //'<%Session["temp"] = "' + myvar + '"; %>'
                   
                    
                   
                });
            });
        </script>
    }
</body>
</html>